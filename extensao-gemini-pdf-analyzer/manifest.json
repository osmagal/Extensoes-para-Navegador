{
    "manifest_version": 3,
    "name": "Resume PDF AI",
    "version": "1.0",
    "description": "Extens√£o para resumir arquivo PDF com IA.",
    "side_panel": {
      "default_path": "popup.html"
    },
    "permissions": ["activeTab", "scripting", "runtime", "sidePanel", "tabs"],
    "host_permissions": ["<all_urls>"],
    "action": {
      "default_popup": "popup.html",
      "default_icon": "pdf-icon.png"
    },
    "background": {
      "service_worker": "background.js"
    },
    "open_page": "popup.html"
  }
  